<odoo>
  <template id="retrocession_report_template">
    <t t-call="web.basic_layout">
      <style>
        @page {
          margin: 5mm !important;
        }
        .page.o_report_layout_standard {
          max-width: none !important;
          width: 100% !important;
          padding: 0 !important;
          margin: 0 !important;
        }
        .o_report_layout_standard .article {
          padding: 0 !important;
          margin: 0 !important;
        }
        body.container {
          max-width: none !important;
          padding: 0 !important;
        }
        body {
          font-family: 'Inter', sans-serif;
          color: #000;
        }
        .header {
          display: flex;
          justify-content: space-between;
          align-items: flex-start;
        }
        .header img {
          max-height: 80px;
          max-width: 200px;
          width: auto;
          height: auto;
        }
        .invoice-title {
          font-size: 2.5em;
          font-weight: 400;
        }
        .summary-section {
          display: flex;
          justify-content: space-between;
          gap: 40px;
        }
        .summary-box, .client-box {
          padding: 16px;
          font-size: 14px;
          width: 40%;
        }
        .summary-box {
          border: 1px solid #ccc;
        }
        .client-box {
          text-align: right;
        }
        .summary-box table {
          width: 100%;
        }
        .summary-box td {
          padding: 4px 0;
        }
        table {
          width: 100%;
          border-collapse: collapse;
          font-size: 12px;
          margin-top: 40px;
        }
        th, td {
          border-bottom: 1px solid #ccc;
          padding: 12px 8px;
          text-align: left;
        }
        th {
          font-weight: 700;
          text-transform: uppercase;
          font-size: 11px;
        }
        .text-right {
          text-align: right;
        }
        .footer {
          margin-top: 60px;
          display: flex;
          justify-content: space-between;
          font-size: 12px;
        }
        .footer .payment-info {
          width: 50%;
        }
        .footer .signature {
          width: 50%;
          text-align: right;
        }
      </style>

      <t t-foreach="docs" t-as="doc">
        <div class="document" stlye="margin: 30px;">
          <div class="header">
            <img t-att-src="'https://vape-station.ch/img/VapeStationBlack.png'" />
            <div class="invoice-title">NOTE DE RÉTROCESSION #<t t-esc="doc.id"/></div>
          </div><br/><br/>

          <div class="summary-section">
            <div class="summary-box">
              <table style="margin: 0px">
                <tr><td style="border: none;"><strong>Période</strong></td><td style="border: none;"><t t-esc="doc.date_start"/> → <t t-esc="doc.date_end"/></td></tr>
                <tr><td style="border: none;"><strong>Machine(s)</strong></td><td style="border: none;"><t t-esc="', '.join(set([l.machine_number for l in doc.line_ids]))"/></td></tr>
                <tr><td style="border: none;"><strong>Commission Totale</strong></td><td style="border: none;"><t t-esc="'%.2f' % doc.total_commission"/> CHF</td></tr>
              </table>
            </div>
            <div class="client-box">
              <t t-esc="doc.partner_id.name"/><br/>
              <t t-if="doc.partner_id.street" t-esc="doc.partner_id.street"/><br t-if="doc.partner_id.street"/>
              <t t-if="doc.partner_id.city" t-esc="doc.partner_id.city"/>
              <t t-if="doc.partner_id.country_id" t-esc="doc.partner_id.country_id.name"/>
            </div>
          </div><br/><br/>

          <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Machine</th>
                <th>Commande</th>
                <th>Produit</th>
                <th class="text-right">Prix TTC</th>
                <th class="text-right">Prix HT</th>
                <th class="text-right">Commission</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="doc.line_ids" t-as="line">
                <td><t t-esc="line.date"/></td>
                <td><t t-esc="line.machine_number"/></td>
                <td><t t-esc="line.order_number"/></td>
                <td><t t-esc="line.product_name"/></td>
                <td class="text-right"><t t-esc="'%.2f' % line.price_ttc"/></td>
                <td class="text-right"><t t-esc="'%.2f' % line.price_ht"/></td>
                <td class="text-right"><t t-esc="'%.2f' % line.commission"/></td>
              </tr>
              <tr>
                <td colspan="4" style="text-align:right; font-weight:bold; font-size:14px;">Total</td>
                <td class="text-right"><t t-esc="'%.2f' % doc.total_ttc"/></td>
                <td class="text-right"><t t-esc="'%.2f' % doc.total_ht"/></td>
                <td class="text-right"><t t-esc="'%.2f' % doc.total_commission"/></td>
              </tr>
            </tbody>
          </table>

          <div class="footer">
            <div class="payment-info">
              <strong>INFORMATIONS DE PAIEMENT</strong><br/>
              Le montant sera versé sous 5 jours sur le compte :<br/>
              <t t-esc="doc.partner_id.x_iban"/>
            </div>
            <div class="signature">
              <t t-esc="user.company_id.name"/><br/>
              <t t-if="user.company_id.street" t-esc="user.company_id.street"/><br t-if="user.company_id.street"/>
              <t t-if="user.company_id.zip" t-esc="user.company_id.zip"/>
              <t t-if="user.company_id.city"> <t t-esc="user.company_id.city"/></t><br/>
              <t t-if="user.company_id.country_id" t-esc="user.company_id.country_id.name"/>
            </div>
          </div>
        </div>
      </t>

      <script type="text/javascript">
        window.addEventListener('load', function () {
          setTimeout(function () {
            window.print();
          }, 500); // petit délai pour s'assurer que tout est bien chargé
        });
      </script>
    </t>
  </template>
</odoo>
